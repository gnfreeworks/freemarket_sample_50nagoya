.single-container
  .single-header
    = render '/entry/entry-header'
    %nav.progress-bar.signup-bar
      %ol.clearfix
        %li
          会員情報
          .progress-status
        %li
          電話番号認証
          .progress-status
        %li
          お届け先住所入力
          .progress-status
        %li.
          支払い方法
          .progress-status
        %li.active
          完了
          .progress-status
  .main-content
    .main-content__title
      %h2 支払い方法
    .main-content__form
      = form_for @user, url: done_signup_index_path, html: {class: 'first-main__box'} do |f|
        .main-content__form__box
          .form__block
            = f.label :カード番号
            %span.form__block__required
              必須
            %br/
            %textarea.fake-box 半角数字のみ
            %img.pay-image
          .form__block
            = f.label :有効期限
            %span.form__block__required
              必須
            %br/
          .form__block
            = f.label :セキュリティコード
            %span.form__block__required
              必須
            %br/
            %textarea.fake-box カード背面4桁もしくは3桁の番号
            .card-number
              %a{} カードの裏面の番号とは？
          .form__actions
          = f.submit "次へ進む", class: 'progress-btn'
  .entry-footer
    =render '/entry/entry-footer'