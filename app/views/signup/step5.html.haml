.single-container
  %header.single-header
    = render '/entry/entry-header'
    %nav.progress-bar.signup-bar
      %ol.clearfix
        %li
          会員情報
          .progress-status
        %li
          電話番号認証
          .progress-status
        %li
          お届け先住所入力
          .progress-status
        %li.active
          支払い方法
          .progress-status
        %li
          完了
          .progress-status
  %main.main-content
    .main-content__title
      %h2 支払い方法
    .main-content__form
      = form_for @creditcard, url: done_signup_index_path, html: {class: 'first-main__box'} do |f|
        = render partial: '/mypage/cardcreate_content', locals: { creditcard: @creditcard, f: f } 
  %footer.single-footer
    =render '/entry/entry-footer'
