.single-container
  %header.single-header
    =render '/entry/entry-header'
  %main.single-main
    %section.l-single-container
      - if user_signed_in?
        %h2.l-single-head.registration すでにログインしています
      - else
        %h2.l-single-head.registration 新規会員登録
        .l-single-inner.registration-form
          .l-single-content
            = link_to step1_signup_index_path, class: 'btn-default__login btn-red btn-mail' do
              %i.far.fa-envelope
                メールアドレスで登録する
            %button.btn-default__login.btn-facebook
              %i.fab.fa-facebook
                Facebookで登録する
            %button.btn-default__login.btn-sns-google
              Googleで登録する
  %footer.single-footer
    =render '/entry/entry-footer'
