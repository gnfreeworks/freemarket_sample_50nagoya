.single-container
  %header.single-header
    %h1.single-header__titele
      = link_to '/', class: "single-header__link" do
        = image_tag 'logo.svg', alt: 'logo', class: 'single-header__image'
    %nav.progress-bar.signup-bar
      %ol.clearfix
        %li
          会員情報
          .progress-status
        %li
          電話番号認証
          .progress-status
        %li.active
          お届け先住所入力
          .progress-status
        %li
          支払い方法
          .progress-status
        %li
          完了
          .progress-status
  %main.main-content
    = form_for @user, url: step5_signup_index_path, html: {class: 'first-main__box'} do |f|
      .main-content__title
        %h2 発送元・お届け先住所入力
      .main-content__form
        .main-content__form__box
          .form__block#input-address_name
            = f.label :お名前
            %span.form__block__required
              必須
            %br/
            = f.text_field :address_first_name, class: 'text_field', placeholder: '例）山田', id: 'input-address_first_name'
            = f.text_field :address_last_name, class: 'text_field', placeholder: '例）綾', id: 'input-address_last_name'

          .form__block
            = f.label :お名前カナ
            %span.form__block__required
              必須
            %br/
            = f.text_field :address_firt_kananame, class: 'text_field', placeholder: '例）ヤマダ', id: 'input-address_firt_kananame'
            = f.text_field :address_last_kananame, class: 'text_field', placeholder: '例）アヤ', id: 'input-address_last_kananame'

          .form__block
            = f.label :郵便番号
            %span.form__block__required
              必須
            %br/
            = f.text_field :address_zipcode, class: 'text_field', placeholder:'例）123-4567', id: 'input-address_zipcode'
          .form__block
            = f.label :都道府県
            %span.form__block__required
              必須
            %br/
            = f.text_field :address_prefecture, class: 'text_field', placeholder: '例）横浜市緑区', id: 'input-address_prefecture'
          .form__block
            = f.label :市区村町
            %span.form__block__required
              必須
            %br/
            = f.text_field :address_city, class: 'text_field', placeholder: '例）横浜市緑区', id: 'input-address_city'
          .form__block
            = f.label :番町
            %span.form__block__required
              必須
            %br/
            = f.text_field :address_block, class: 'text_field', placeholder: '例）青山1-1-1', id: 'input-address_block'
          .form__block
            = f.label :建物名
            %span.form__block__discretion
              任意
            %br/
            = f.text_field :address_building, class: 'text_field', placeholder: '例）柳ビル103'
          .form__block
            = f.label :電話
            %span.form__block__discretion
              任意
            %br/
            = f.number_field :address_phone_number, class: 'text_field', placeholder: '例）09012345678'
          .form__actions
            = f.submit "次へ進む", class: 'progress-btn btn-step4', disabled:true
  %footer.single-footer
    =render '/entry/entry-footer'
