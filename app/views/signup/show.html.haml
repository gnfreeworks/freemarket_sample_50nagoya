.single-container
  .single-header
    = render '/entry/entry-header'
    %nav.progress-bar.signup-bar
      %ol.clearfix
        %li
          会員情報
          .progress-status
        %li
          電話番号認証
          .progress-status
        %li
          お届け先住所入力
          .progress-status
        %li.active
          支払い方法
          .progress-status
        %li
          完了
          .progress-status
  .main-content
    .main-content__title
      %h2 支払い方法
    .main-content__form
      = form_for @creditcard, url: done_signup_index_path, html: {class: 'first-main__box'} do |f|
        .main-content__form__box
          .form__block
            = f.label :カード番号
            %span.form__block__required
              必須
            %br/
            = f.text_field :card_number, autofocus: true, placeholder: '半角数字のみ', class: 'text_field', value:333333333333
          %ul.signup-card-list
            %li
              = image_tag "visa.svg", size: "49x20", alt: ""
            %li
              = image_tag "master-card.svg", size: "34x20", alt: ""
            %li
              = image_tag "saison-card.svg", size: "30x20", alt: ""
            %li
              = image_tag "jcb.svg", size: "32x20", alt: "visa"
            %li
              = image_tag "american_express.svg", size: "21x20", alt: ""
            %li
              = image_tag "dinersclub.svg", size: "32x20", alt: "visa"
            %li
              = image_tag "discover.svg", size: "32x20", alt: "visa"
          .form__block
            = f.label :有効期限
            %span.form__block__required
              必須
            %br/
            .select-wrap.half
              != sprintf(f.date_select(:expiration_date,
                          with_css_classes:'XXXXX',
                          order:[:month,:year,:day],
                          use_month_numbers: true,
                          discard_day:true,
                          include_blank: '%i.fas.fa-arrow-down',
                          start_year: Time.now.year,
                          end_year: (Time.now.year + 5),
                          with_css_classes: 'XXXX', date_separator:'%s'),'月') + '年'

          .form__block
            = f.label :セキュリティコード
            %span.form__block__required
              必須
            %br/
            = f.text_field :secrity_code, autofocus: true, placeholder: 'カード背面4桁もしくは3桁の番号', class: 'input-default', id: 'payment_card_security_code' , value:3333
            .card-number
              %a{} カードの裏面の番号とは？
          .form__actions
          = f.submit "次へ進む", class: 'progress-btn'
  .entry-footer
    =render '/entry/entry-footer'