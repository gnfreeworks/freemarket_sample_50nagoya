= product.zip(image) do |product, image|
  %li.product__inner
    .product__content
      = link_to products_status_path(product.product.id), class: 'product__box' do
        %figure.product__figure
          %figcaption
            %span.product__title
              = product.product.name
          .product__image__box
            .product__price
              = number_to_currency(product.product.price, :format => "%u%n", :unit => "ï¿¥")
            = image_tag "data:image/*;base64,#{image}", alt: 'product', class: 'product__image'

